<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:fadeScrollbars="false" >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     >

    <Button
        android:id="@+id/aboutButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/about"
        android:onClick="about" />

    <Button
        android:id="@+id/sudokuButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/aboutButton"
        android:layout_below="@+id/aboutButton"
        android:text="@string/sudoku"
        android:onClick="startSudoku" />

    <Button
        android:id="@+id/errorButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/sudokuButton"
        android:layout_below="@+id/sudokuButton"
        android:text="@string/gError"
        android:onClick="generateError" />
    
    <Button
        android:id="@+id/dictionaryButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/errorButton"
        android:layout_below="@+id/errorButton"
        android:onClick="startDictionary"
        android:text="@string/dictionary" />

    <Button
        android:id="@+id/dabButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/dictionaryButton"
        android:layout_below="@+id/dictionaryButton"
        android:onClick="startDabble"
        android:text="Dabble" />

    <Button
        android:id="@+id/commButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dabButton"
        android:layout_alignLeft="@+id/dabButton"
        android:onClick="startComm"
        android:text="Communication" />

    <Button
        android:id="@+id/twoButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/commButton"
        android:layout_alignLeft="@+id/commButton"
        android:onClick="startTwoPlayer"
        android:text="Two Player Dabble" />

    <Button
        android:id="@+id/trickyButton"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twoButton"
        android:layout_alignLeft="@+id/twoButton"
        android:onClick="startTricky"
        android:text="Trickiest Parts" />
    
    <Button
        android:id="@+id/finalButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/trickyButton"
        android:layout_alignLeft="@+id/trickyButton"
        android:onClick="startFinal"
        android:text="Final Project" />
    
    <Button
        android:id="@+id/quitButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/finalButton"
        android:onClick="exit"
        android:text="@string/quit"
        android:layout_alignLeft="@+id/finalButton" />

</RelativeLayout>
</ScrollView>