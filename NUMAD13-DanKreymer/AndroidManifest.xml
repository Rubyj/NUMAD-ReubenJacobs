<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="edu.neu.madcourse.dankreymer"
      android:versionCode="10"
      android:versionName="2.03">
    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="14" />
    
    <!-- Permissions stuff /-->
    <uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.READ_PHONE_DATA" />
	<uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application android:icon="@drawable/ic_launcher"
          android:label="@string/app_name">
        <activity android:name=".Main"
              android:label="@string/main_title">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".About"
              android:label="@string/about_title"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".AboutSudoku"
              android:label="@string/about_title"
              android:theme="@android:style/Theme.Dialog">
        </activity>
        <activity android:name=".Prefs" android:label="@string/settings_title"/>
        <activity android:name=".Sudoku" android:label="@string/sudoku_title"/>
        <activity android:name=".SudokuGame" android:label="@string/game_title"/>
        <activity android:name=".Dictionary" android:label="@string/dictionary_title"
                  android:windowSoftInputMode="adjustPan"
                  android:screenOrientation="portrait"/>
        <activity android:name=".Dabble" android:label="@string/dabble_title"/>
        <activity android:name=".DabbleGame" android:label="@string/dabble_title"
             android:screenOrientation="landscape"/>
        <activity android:name=".AcknowledgementsDictionary" 
                  android:label="@string/acknowledgements_title"
                  android:theme="@android:style/Theme.Dialog"/>
    </application>
</manifest>