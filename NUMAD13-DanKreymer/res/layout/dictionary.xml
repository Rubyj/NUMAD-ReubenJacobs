<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="30dip">

    <EditText
        android:id="@+id/word_box"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:ems="8"
        android:inputType="text"
        android:digits="qwertyuiopasdfghjklzxcvbnm"
        android:maxLines = "10">
        <requestFocus />
    </EditText>
    
    <Button
        android:id="@+id/clear_button"
        android:layout_below="@id/word_box" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear_label" />

    <TextView
        android:id="@+id/word_list"
        android:layout_below="@id/clear_button" 
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@color/sudoku_background"
        android:gravity="center_horizontal"
        android:textSize="18sp">
    </TextView>

    <Button
        android:id="@+id/acknowledgements_button"
        android:layout_below="@id/word_list" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/acknowledgements_label" />

    <Button
        android:id="@+id/return_to_menu__button"
        android:layout_below="@id/acknowledgements_button" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/return_to_menu_label" />

</RelativeLayout>